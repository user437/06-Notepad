<Window x:Class="_06_notepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_notepad"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="278" Margin="10,32,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="497"/>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="62">
            <MenuItem Header="file" Width="62" Background="#FF20E4EE">
                <MenuItem x:Name="open" Click="MenuItem_Click" Header="open"/>
                <MenuItem x:Name="save_as" Header="save as" Click="save_as_Click"/>
                <MenuItem Header="exit" Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
